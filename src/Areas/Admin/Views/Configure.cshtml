@model Nop.Plugin.Admin.ScheduleTaskLog.Areas.Admin.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ScheduleTaskLog" asp-action="Configure" method="post">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="DisableLog" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="DisableLog" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="LogExpiryDays" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="LogExpiryDays" />
                            @Html.ValidationMessageFor(model => model.LogExpiryDays)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>