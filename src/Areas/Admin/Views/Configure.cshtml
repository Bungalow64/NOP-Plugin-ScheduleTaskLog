@model Nop.Plugin.Admin.ScheduleTaskLog.Areas.Admin.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ScheduleTaskLog" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="DisableLog" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DisableLog" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="LogExpiryDays" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="LogExpiryDays" />
                        <span asp-validation-for="LogExpiryDays"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <button type="submit" name="save" class="btn bg-primary">@T("Admin.Common.Save")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>